{
  "manifest_version": 2,

  "name": "Panda",
  "description": "This extension allows the user to change the background color of the current page.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "panda.png",
    "default_popup": "popup.html"
  },
  "icons":{
    "64": "panda.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "history"
  ]
}
